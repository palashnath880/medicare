generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  phone    String   @unique
  name     String?
  address  String?
  isAdmin  Boolean  @default(false)
  password String
  dob      DateTime
}

model Doctor {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  degreeId          String  @db.ObjectId
  degree            Degree  @relation(fields: [degreeId], references: [id])
  specialist        String
  employeeOf        String
  visitPrice        Int
  visitTimes        Json[]
  createdAt         DateTime @default(now())
  imageId           String   @unique @db.ObjectId
  image             Image    @relation(fields: [imageId], references: [id])
}

model Image {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  display_url String
  delete_url  String
  doctor      Doctor?
}

model Degree {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  doctor Doctor[]
}
